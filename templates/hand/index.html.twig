{% extends 'base.html.twig' %}

{% block title %}Hand index{% endblock %}

{% block body %}
    <h1>Hand index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hand in hands %}
            <tr>
                <td>{{ hand.id }}</td>
                <td>
                    <a href="{{ path('app_hand_show', {'id': hand.id}) }}">show</a>
                    <a href="{{ path('app_hand_edit', {'id': hand.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hand_new') }}">Create new</a>
{% endblock %}
