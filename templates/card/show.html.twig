{% extends 'base.html.twig' %}

{% block title %}Card{% endblock %}

{% block body %}
    <h1>Card</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ card.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ card.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ card.type }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ card.value }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ card.capacity }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ card.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_card_index') }}">back to list</a>

