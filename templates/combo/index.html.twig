{% extends 'base.html.twig' %}

{% block title %}Combo index{% endblock %}

{% block body %}
    <h1>Combo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for combo in combos %}
            <tr>
                <td>{{ combo.id }}</td>
                <td>{{ combo.name }}</td>
                <td>{{ combo.value }}</td>
                <td>
                    <a href="{{ path('app_combo_show', {'id': combo.id}) }}">show</a>
                    <a href="{{ path('app_combo_edit', {'id': combo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_combo_new') }}">Create new</a>
{% endblock %}
