{% extends 'base.html.twig' %}

{% block title %}River index{% endblock %}

{% block body %}
    <h1>River index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for river in rivers %}
            <tr>
                <td>{{ river.id }}</td>
                <td>
                    <a href="{{ path('app_river_show', {'id': river.id}) }}">show</a>
                    <a href="{{ path('app_river_edit', {'id': river.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_river_new') }}">Create new</a>
{% endblock %}
